#  -------- MY BSPWM HOTKEYS -------------------
# quit bspwm normally
alt + ctrl + Delete
	pkill -x panel; bspc quit

# Close window
super + q
	bspc window -c

# Kill window
super + shift + q
	bspc node -k

# focus the window in the given direction
super + {_,ctrl + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# focus or send to the given desktop
super + {_,ctrl + }{1-9,0}
	bspc {desktop -f,window -d} '^{1-9,10}'

# Make all windows occupy the same area.
super + b
	bspc desktop -B

# Rotate the tree of the selected desktop.
super + o
	bspc desktop -R 90

# Flip the layout current desktop horizontally. That's weird.
super + bracketright
	bspc desktop -F vertical

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# set the window state
super + {i,shift + i,u,f}
	bspc window -t {tiled,pseudo_tiled,floating,fullscreen}

# focus the previously focused window
alt + Tab
	bspc window -f last

# Resize the selected window.
#super + alt + {h,j,k,l}
#	bspc window -e {left -120,down +120,up -120,right +120}
#super + alt + shift + {h,j,k,l}
#	bspc window -e {right -120,up +120,down -120,left +120}

# Select the previously focused desktop.
super + Tab
  bspc desktop -f last

# move a floating window
super + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

# Preselect the splitting area of the selected window.
super + alt + {h,j,k,l}
  dir={left,down,up,right}; \
  cur=$(bspc query -T -w focused.!automatic | jshon -e splitDir -u 2>&-); \
  [ "$dir" = "$cur" ] && dir=cancel; \
  bspc window -p "$dir"

# Transplant the selected window to the last preselection.
super + p
  bspc window -w last.!automatic

# cancel the preselection for the focused node
super + alt + p
	bspc window -p cancel

~button1
	bspc pointer -g focus

# ---- Mouse Resize -------------------------
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

# end move/resize
super + @button{1-3}
	bspc pointer -u

# ---- Launch apps -------------------------
# Google chrome - I created a cute alias for it
super + F9
	crrr

# terminal emulator
super + Return
	myurxvt.sh

# program launcher
super + space
	rofi -show run
	#dmenu_run

# window switcher
super + alt + space
	rofi -show window

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#screenshot
Print
	scrot
